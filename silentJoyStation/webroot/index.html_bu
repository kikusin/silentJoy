<!DOCTYPE html>
<html lang="es">
<head>
  <meta charset="UTF-8" />
  <title>SilentJoyStation</title>
  <style>
    body {
      font-family: sans-serif;
      text-align: center;
      padding-top: 30vh;
      background-color: #111;
      color: #fff;
    }
    button {
      padding: 1em 2em;
      font-size: 1.2em;
      border-radius: 8px;
      border: none;
      background-color: #007bff;
      color: white;
      cursor: pointer;
    }
    button:hover {
      background-color: #0056b3;
    }
    audio {
      margin-top: 2em;
    }
  </style>
</head>
<body>
  <h1>üéß Silent Joy</h1>
  <button onclick="start()">‚ñ∂Ô∏è </button>

  <audio id="player" controls style="display: none;"></audio>

  <script src="https://cdn.jsdelivr.net/npm/hls.js@latest"></script>
  <script>
    const clientId = localStorage.getItem("clientId") || `cliente_${Math.floor(Math.random() * 10000)}`;
    localStorage.setItem("clientId", clientId);

    function reportSegment(segmentIndex) {
      fetch("http://192.168.88.252:5050/sync", {
        method: "POST",
        headers: { "Content-Type": "application/json" },
        body: JSON.stringify({
          id: clientId,
          segment: segmentIndex
        })
      }).catch(err => console.warn("No se pudo reportar el segmento:", err));
    }

    function start() {
      const audio = document.getElementById('player');
      audio.autoplay = true;

      if (Hls.isSupported()) {
        const hls = new Hls();
        hls.loadSource('hls/stream.m3u8');
        hls.attachMedia(audio);

        hls.on(Hls.Events.MANIFEST_PARSED, () => {
          audio.play();
        });

        hls.on(Hls.Events.FRAG_CHANGED, (event, data) => {
          const segmentName = data.frag.relurl; // e.g., stream15.ts
          const match = segmentName.match(/stream(\d+)\.ts/);
          if (match) {
            const segmentIndex = parseInt(match[1], 10);
            reportSegment(segmentIndex);
          }
        });

      } else if (audio.canPlayType('application/vnd.apple.mpegurl')) {
        audio.src = 'hls/stream.m3u8';
        audio.addEventListener('canplay', () => {
          audio.play();
        });
      }

      audio.style.display = 'none';
    }
  </script>
</body>
</html>
